{
  "name": "obsidian-rag-server",
  "version": "0.1.0",
  "description": "MCP server for RAG-based retrieval from Obsidian vaults",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:integration": "bun test test/integration",
    "benchmark": "bun test/benchmarks/vault-loading.benchmark.ts && bun test/benchmarks/search-performance.benchmark.ts",
    "typecheck": "bunx tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "check": "biome check . && bunx tsc --noEmit && bun test",
    "build": "bun build src/index.ts --target=bun --outfile=dist/server.js",
    "commit": "cz",
    "commitlint": "commitlint --edit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": ["obsidian", "mcp", "rag", "retrieval", "knowledge-base"],
  "author": "Theo",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "chokidar": "^3.6.0",
    "cosmiconfig": "^9.0.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "typescript": "^5.3.0"
  }
}
