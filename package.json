{
  "name": "obsidian-rag-server",
  "version": "0.1.0",
  "description": "MCP server for RAG-based retrieval from Obsidian vaults",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bunx tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "check": "biome check . && bunx tsc --noEmit && bun test",
    "build": "bun build src/index.ts --target=bun --outfile=dist/server.js"
  },
  "keywords": ["obsidian", "mcp", "rag", "retrieval", "knowledge-base"],
  "author": "Theo",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "chokidar": "^3.6.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
